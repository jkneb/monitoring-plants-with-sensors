{{line-chart data=filteredContent chartClassName="lights-chart"}}

<div class="chart-data-title">
  <div class="row">
    <div class="col-xs-6">
      {{current-value model=lastEntrie unit="lux" title="Light"}}
    </div>
    <div class="col-xs-6 align-right">
      {{svg-icon class="dashboard-icon icon-sun2"}}
    </div>
  </div>
</div>

<div class="chart-data-block">
  <div class="chart-data-block-wraper">
    {{#dashboard-table}}
      <tbody>
      {{#each tenLastFilteredContent as |light|}}
        <tr>
          <td>{{light.value}}Â lux</td>
          <td>{{format-date-twitter light.time}}</td>
        </tr>
      {{else}}
